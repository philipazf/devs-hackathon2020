<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Signin</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="/css/profile.css" rel="stylesheet">
</head>

<body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Company name</h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">About Us</a>
      <a class="p-2 text-dark" href="#">Contact</a>
    </nav>
    <a class="btn btn-outline-primary" href="#">Log Out</a>
  </div>
    <div class="container profile-page">
        <div class="card user" style="width: 20rem;">
            <img class="card-img-top"
                src="https://3.bp.blogspot.com/-qDc5kIFIhb8/UoJEpGN9DmI/AAAAAAABl1s/BfP6FcBY1R8/s1600/BlueHead.jpg"
                alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title"><%= userName %></h4>
                <p class="card-text"><%= userEmail %></p>
                <p class="card-text">Total Points: 4567</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><h4>Rewards</h4></li>
                <li class="list-group-item">Sample Reward</li>
                <li class="list-group-item">
                    <div class="last"></div>
                </li>
            </ul>
        </div>
        <div class="tasks">
            <h3>My Skills</h3>
            <div class="card">
              <% for (let i = 0; i < userSkills.length; i++) { %>
                <div class="card-body userskillcard">
                    <h5 class="card-title skilltitle"><%= userSkills[i] %></h5>
                  </div>
              <% } %>
                <div class="card-body">

                    <form action="/addskill" method="POST">
                        <div class="form-group">
                          <input name="skillname" type="text" class="form-control" id="Skill" placeholder="Add Skill">
                        </div>
                        <button type="submit" class="btn btn-success">Add Skill</button>
                    </form>

                </div>
            </div>
        </div>
        <div class="suggestions">
            <h3>Matches</h3>
            <div class="card">
                <% if (showMatches1 == true) { %>
                  <div class="card-body userskillcard">
                    <div class="card-body">
                      <h5 class="card-title"><%= matchNames[0] %></h5>
                      <p class="card-text"><%= skillsList[0] %></p>
                      <a href="#" class="btn btn-success">Contact</a>
                    </div>
                  </div>
                <% } %>
                <% if (showMatches2 == true) { %>
                  <div class="card-body userskillcard">
                    <div class="card-body">
                      <h5 class="card-title"><%= matchNames[1] %></h5>
                      <p class="card-text"><%= skillsList[1] %></p>
                      <a href="#" class="btn btn-success">Contact</a>
                    </div>
                  </div>
                <% } %>
                <% if (showMatches3 == true) { %>
                  <div class="card-body userskillcard">
                    <div class="card-body">
                      <h5 class="card-title"><%= matchNames[2] %></h5>
                      <p class="card-text"><%= skillsList[2] %></p>
                      <a href="#" class="btn btn-success">Contact</a>
                    </div>
                  </div>
                <% } %>
                <% if (showMatches4 == true) { %>
                  <div class="card-body userskillcard">
                    <div class="card-body">
                      <h5 class="card-title"><%= matchNames[3] %></h5>
                      <p class="card-text"><%= skillsList[3] %></p>
                      <a href="#" class="btn btn-success">Contact</a>
                    </div>
                  </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>